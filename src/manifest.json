{
  "manifest_version": 2,
  "name": "Firefox Recap",
  "version": "2.0.0",
  "description": "Categorize and analyze browsing history for productivity insights.",
  "permissions": [
    "history",
    "storage",
    "tabs",
    "webNavigation",
    "downloads",
    "scripting",
    "https://big.oisd.nl/*"
  ],
  "optional_permissions": [
    "trialML"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true 
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "src/assets/icon48.png",
      "128": "src/assets/icon128.png"
    }
  },
  "icons": {
    "48": "src/assets/icon48.png",
    "128": "src/assets/icon128.png"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'; connect-src https://big.oisd.nl"
}