{
  "manifest_version": 2,
  "name": "Histofy",
  "version": "1.0.0",
  "description": "Categorize and analyze browsing history for productivity insights.",
  "permissions": [
    "history",
    "storage",
    "tabs",
    "webNavigation",
    "downloads"
  ],
  "optional_permissions": ["trialML"],
  "background": {
    "scripts": ["background.bundle.js", "batchClassification.bundle.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "web_accessible_resources": [
    "assets/sql-wasm.wasm",
    "storage/domainLocks.json",
    "dist/popup.bundle.js"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
  "browser_specific_settings": {
    "gecko": {
      "id": "histofy@mozilla",
      "strict_min_version": "109.0a1"
    }
  }
}
